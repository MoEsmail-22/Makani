@model Graduation_Project.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/Register.cshtml";
}

<form asp-action="Register" asp-controller="Auth" method="post">
    <label for="username">Full Name</label>
    <input asp-for="Name" type="text" id="username" class="form-control" />

    <label for="email">Email</label>
    <input asp-for="Email" type="email" id="email" class="form-control" />

    <div class="password-wrapper">
        <label for="password">Password</label>
        <div class="input-group">
            <input asp-for="Password" type="password" id="password" class="form-control" />
            <i class="fa-regular fa-eye-slash toggle-password"></i>
        </div>
    </div>

    <div class="password-wrapper">
        <label for="conf-pass">Confirm Password</label>
        <div class="input-group">
            <input type="password" id="conf-pass" class="form-control" />
            <i class="fa-regular fa-eye-slash toggle-password"></i>
        </div>
    </div>

    <div id="passwordError" style="color: red; display: none;">Passwords do not match!</div>

    <label class="icon-checkbox">
        <input type="checkbox" name="agree" required />
        <i class="fa-regular fa-circle-check"></i>
        <span>I agree to the terms and conditions</span>
    </label>

    <input type="submit" id="submit" value="Sign Up" />
</form>

<p>Already have an account? <a asp-action="Index" asp-controller="Auth">Sign In</a></p>
